$assets-path = '../assets/'

//=======================
// Base
//=======================
@require 'base/reset'
@require 'base/variables'
@require 'base/helpers'
@require 'base/colors'
@require 'base/layout'
@require 'base/unicode'
@require 'base/fonts'

//=======================
// Fonts
//=======================
// See base/fonts for full listing
// Set other fonts in main.styl
// Note: all projects require Benton Bold and Miller-Regular so don't change em
// set-font('futura-bold')
// set-font('benton-regular')
@font-face
  font-family 'FuturaStd-Bold';
  src url($assets-path + 'fonts/FuturaStd-Bold.woff'), url($assets-path + 'fonts/FuturaStd-Bold.woff2')

@font-face
  font-family 'FuturaStd-Light';
  src url($assets-path + 'fonts/FuturaStd-Light.woff'), url($assets-path + 'fonts/FuturaStd-Light.woff2')

@font-face
  font-family 'FuturaStd-Medium';
  src url($assets-path + 'fonts/FuturaStd-Medium.woff'), url($assets-path + 'fonts/FuturaStd-Medium.woff2')

//=======================
// Template Components
//=======================
@require 'template/*'

//=======================
// Custom styles
//=======================
@require 'graphic/*'

