.box
  &__container
    width 100%
    height 100%
    position relative
  &__slides
    &--item
      rhythm('base')

.scrolly
  width 100%

  .sticky
    position sticky
    position -webkit-sticky
    top 0
    left 0
    z-index 0
    opacity 0
    width 100%
    +mq(bp-3)
      top 10px
      left 0px

    &.scrolly-fade-in
      opacity 1
      transition opacity 1s ease-in-out

    h4
      font-size 1.3rem
      margin .5em 0


  &__steps
    max-width 35rem
    margin 0 auto

    .step
      min-height 90vh
      margin-bottom 1rem
      transform translate3d(0, 0, 0)
      line-height 1.5

      p
        background rgba(255, 255, 255, 0.95)
        padding 1em

.move-box
  padding 1em
  background $accent-b1
  rhythm('small')

  &__title
    font-weight bold

  &__text
    line-height 1.6
    rhythm('small')
    margin-bottom .75em

