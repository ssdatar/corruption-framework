//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)
.sidebar
  padding-top 1em
  padding-left 1em
  position sticky
  top 0
  left 1em
  background $primary-red
  height 100vh
  font-family 'Futura'
  z-index 10

  &__list
    list-style-type none

    &--item
      margin 2em 1em

      a
        text-decoration none
        color $offwhite !important
        position relative

        &:before
          content: "";
          position: absolute;
          width: 100%;
          height: 2px;
          bottom: 0;
          left: 0;
          background-color: $offwhite;
          visibility: hidden;
          transform: scaleX(0);
          transition: all 0.3s ease-in-out 0s;

        &:hover
          text-decoration underline
          transition text-decoration .2s linear

          &:before
            visibility visible
            transform scaleX(1)

.main
  padding-top 1em

  &__hed
    font-size 1.5em
    font-family 'Futura'
    font-weight bold
    +mq(bp-2)
      font-size 3em

  &__graf
    rhythm('base')
    max-width 50rem
    margin 1em 0
    line-height 1.6
    font-weight normal

    strong
      font-weight bold

    em
      font-style italic
