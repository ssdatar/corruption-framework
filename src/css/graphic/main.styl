//=======================
// Custom styles
//=======================

// To use images in assets folder:
// ex: background-image url($assets-path + 'filename.jpg')

// See `base` folder for variables (color, font, media queries)

.futura-bold
  font-family 'FuturaStd-Bold', Impact, Arial
  font-weight 700

.futura-light
  font-family 'FuturaStd-Light', Impact, Arial

.futura-medium
  font-family 'FuturaStd-Medium', Impact, Arial

.intro
  padding 1em
  max-width 55rem
  margin 1em auto
  height 70vh

.sidebar
  display none
  +mq(bp-1)
    display block
    padding-top 1em
    padding-left 1em
    position sticky
    top 0
    left 1em
    background $primary-red
    height 100vh

  &__list
    list-style-type none

    &--item[data-active='true']
      background $accent-b1
      padding 1em
      a
        color $black !important

    &--item
      margin 2em 1em

      a
        text-decoration none
        color $offwhite !important
        position relative

        &:before
          content: "";
          position: absolute;
          width: 100%;
          height: 2px;
          bottom: 0;
          left: 0;
          background-color: $offwhite;
          visibility: hidden;
          transform: scaleX(0);
          transition: all 0.3s ease-in-out 0s;

        &:hover
          text-decoration underline
          transition text-decoration .2s linear

          &:before
            visibility visible
            transform scaleX(1)

.main
  padding-top 1em

  &__hed
    font-size 1.5em
    margin 1em 0
    +mq(bp-2)
      font-size 2em
    +mq(bp-3)
      font-size 3em

  &__dek
    font-size 1em
    margin 1em 0
    +mq(bp-2)
      font-size 1.3em
    +mq(bp-3)
      font-size 1.6em

  &__section
    rhythm('medium')

  &__graf
    rhythm('base')
    max-width 40rem
    margin 1em 0
    line-height 1.6
    font-weight normal

    &--list
      rhythm('base')
      max-width 40rem
      margin 1em 2em
      line-height 1.6

    strong
      font-weight bold

    em
      font-style italic

  &__nav
    padding 1em
    margin 1em 0
    @extends $btn
    background $accent-b2
    font-family 'Futura'
    color $black
    +mq(bp-2)
      margin-left 15px
    &:hover
      background darken($accent-b2, 30)
      text-decoration none
      color $offwhite
